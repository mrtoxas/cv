---
/* 
  To display props icons, their names must be specified in the 'safelist' of the uno.config.ts
  https://github.com/unocss/unocss/issues/1780
*/

import type { CollectionEntry } from "astro:content";
import Section from "../ui/Section.astro";

type Props = CollectionEntry<"main">["data"]["contacts"];

const { ariaLabel, links } = Astro.props;
---

<Section ariaLabel={ariaLabel} className="-mt-8">
  <div class="grid gap-x-4 lg:flex flex-wrap md:gap-x-6 md:gap-y-2">
    {links.map((link) => (
      <a href={link.href} title={link.title} class="flex items-center gap-x-[0.4em] py-3 md:py-1 text-sm hover-text-primary">
        <div class=`${link.icon} text-xl text-primary`></div> {link.text}
      </a> 
    ))}
  </div>
</Section>